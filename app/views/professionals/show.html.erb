<%= render 'layouts/generic_header' %>
<p id="notice"> <%= notice %></p>

<div class="container">
 <div class="row">
    <div class="col-sm-10">

<table class="table table-bordered">
  <thead>
    <tr>
      <th><strong>Photo:</strong></th>
      <th><strong>Name:</strong></th>
      <th><strong>Email:</strong></th>
      <th><strong>Job location:</strong></th>
      <th><strong>Job title:</strong></th>
      <th><strong>Phone number:</strong></th>
  </tr>
</thead>
  <td><%= @professional.picture %></td>
  <td><%= @professional.name %></td>
  <td><%= @professional.email %></td>
  <td><%= @professional.job_location %></td>
  <td><%= @professional.job_title %></td>
  <td><%= @professional.phone_number %></td>
</table>

<% if is_this_pro?(@professional) %>
<button type="button" class="btn btn-success"><%= link_to('Edit', edit_professional_path(@professional)) %></button>
<% end %>
<button type="button" class="btn btn-success"><%= link_to 'Back', professionals_path %></button>
<button type="button" class="btn btn-success"><%= link_to 'Logout', pro_logout_path %></button>

<h3>Average rating</h3>

<div class="pro_average_rating" data-score="<%= @professional.average_rating %>"></div>


<h1>Ratings</h1>

<div class="pro_user_rating"></div>

<script type="text/javascript">
  var theScore = <%= @rating.score %>;
  var ratingId = <%= @rating.id %>;
  var ratingType = "<%= @rating.class.to_s %>";
  proUserRating(theScore, ratingId);
</script>
<br>
<% if current_customer %>
  <% if @favorite %>
    <%= link_to "unfavorite", remove_from_favorites_path(@professional), method: :delete%>
  <% else %>
    <%= link_to "favorite", add_to_favorites_path(@professional), method: :post%>
  <% end %>
<% end %>





