<p id="notice"><%= notice %></p>

<h1>Listing Professionals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Job location</th>
      <th>Job title</th>
      <th>Phone number</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.name %></td>
        <td><%= professional.email %></td>
        <td><%= professional.job_location %></td>
        <td><%= professional.job_title %></td>
        <td><%= professional.phone_number %></td>

        <td><%= link_to 'Show', professional %></td>


    <% end %>
  </tbody>
</table>

<br>

